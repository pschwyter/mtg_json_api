<!DOCTYPE html>
<html>
  <head>

    <title>MTG TRADE BINDER DELUXXE</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
     <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
  </head>

  <body>

    <div class="header mobile-collapse ">
      <div class="section-inner mobile-collapse ">
        <div class ="title"> 
        <p class="userinfo">
        <h1> MTG TRADE BINDER </h1>
          <% if current_user %>
            Signed in as <%= current_user.email %>. <br/>at <%= current_user.latitude %> <%= current_user.longitude %> 
            <%= link_to "Log out", session_path("current"), :method => :delete %><br>
            <%= link_to "My Trades", user_trades_path(current_user.id) %>
          <% end %>
            
        </p>
        </div>
      </div>
    </div>
    
    
    <!-- nav -->
  
    <div class="nav nav-mobile-collapse">
      <div class= "wrapper">
    
        <div class="nav-button nav-button-search ">

           <%= link_to image_tag( src="http://cdn.flaticon.com/png/256/63975.png"), cards_path%>
        </div>
      
        <% if current_user %>
          <div class="nav-button nav-button-user">
            <%= link_to image_tag(src = "http://cdn.flaticon.com/png/256/14006.png"), user_path(current_user.id)%>
          </div>
          <div class="nav-button  nav-button-trades">
            <%= link_to image_tag(src= "http://cdn.flaticon.com/png/256/46778.png"), users_path%>
          </div>
          <div class="nav-button nav-button-friends">
            <%= link_to image_tag(src = "http://cdn.flaticon.com/png/256/47352.png"), friends_path  %>
          </div>    
          

          
         <% else %>
         
          <div class="nav-big-button config-theme  ">
        <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
    
          <% end %>
          </div>
      </div>
    </div>

      <%= yield %>

   

  </body>
<div class = "footer">
MAGIC DADDIES
</div>

</html>
