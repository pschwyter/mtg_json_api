        <% if current_user %>
          <div class="nav-button nav-button-planeswalker"><%= link_to image_tag(src = "http://www.clker.com/cliparts/5/b/9/8/11954222721516972319alien_wizard_fenn_03.svg"), user_path(current_user.id)  %></p></div>
        <% else %>
          <div class="nav-button nav-button-planeswalker"><%= link_to image_tag(src = "http://www.clker.com/cliparts/5/b/9/8/11954222721516972319alien_wizard_fenn_03.svg"), cards_path  %></p></div>
        <% end %>
      </div>
    </div><!--/nav-->

    <div class = 'content'>
      <%= yield %>
    </div>

