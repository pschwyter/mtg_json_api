<table class="table-minimal">  <!-- found at modules/table_styling -->
	<tr>
		<th>
			Name
		</th>
		<th>
			Type
		</th>
		<th>
			Cost
		</th>
		<th>
			Set
		</th>
		<th>
			TCGMid
		</th>
		<% if current_user %>
			<th>
				Add to I
			</th>
			<th>
				Add to TB
			</th>
			<th>
				Add to WL
			</th>
		<% end %>
	</tr>
	<% @cards.each do |card| %>
		<tr>
			<td>
				<%= link_to "#{card.name}", card_path(card.id) %>
			</td>
			<td>
				<%= card.card_types.first.name %>
			</td>
			<td>
				<%= all_mana_cost_images(card) %>
			</td>
			<td>
				<%= card.card_set.name %>
			</td>
			<td>
				<a href="#">$<%= card.price %></a>
			</td>
			<% if current_user %>
				<td>
					<%= link_to add_to_inventory_path(card.id), :method => :put do %> 
						Add to Inventory
					<% end %>
				</td>
				<td>
					<%= link_to add_to_tradeable_path(card.id), :method => :put do %> 
						Add to Trade List
					<% end %>
				</td>
				<td>
					<%= link_to add_to_wanted_path(card.id), :method => :put do %>
						Add to Wish List
					<%end%> 
				</td>
			<% end %>
	<% end %>
</table>







