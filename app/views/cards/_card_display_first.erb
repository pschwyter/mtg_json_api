<% unless @cards == nil %>
<h4>Looking for Users with</h4>
<table class="table-minimal">
	<tr>
		<th>
			Name
		</th>
		<th>
			Type
		</th>
		<th>
			Cost
		</th>
		<th>
			Set
		</th>
		<th>
			TCGMid
		</th>
	</tr>
	<% @cards.each do |card| %>
		<tr>
			<td id="card-id" data-id=<%= card.id %>>
				<%= render 'card_modal', card: card %>
			</td>
			<td>
				<%= card.card_types.first.name %>
			</td>
			<td>
				<%= all_mana_cost_images(card) %>
			</td>
			<td>
				<%= card.card_set.name %>
			</td>
			<td>
				<a href="#">$<%= card.price %></a>
			</td>
		</tr>
	<% end %>
</table>
<% end %>








