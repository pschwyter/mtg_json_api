<div class="section-inner search-theme mobile-collapse">


	<% if @trade.initiator == current_user %>
		<%= form_for @trade do |f| %>

			<h2>Your Cards</h2>
			<% current_user.tradeable_cards.each do |listed_card| %>
				<%= check_box_tag "trade[cards_from_initiator][]", listed_card.id, (true if @trade.cards_from_initiator.include?(listed_card.id)) %>
				<%= listed_card.card.name %> <br>
			<% end %>

			<h2><%= @user.first_name%>'s Cards</h2>
			<% @user.tradeable_cards.each do |listed_card| %>
				<%= check_box_tag "trade[cards_from_receiver][]", listed_card.id, (true if @trade.cards_from_receiver.include?(listed_card.id)) %>
				<%= listed_card.card.name %> <br>
			<% end %>

			<%= f.submit "Propose Amended Trade" %>
		<% end %>

	<% elsif @trade.receiver == current_user %>
		<%= form_for @trade do |f| %>

			<h2>Your Cards</h2>
			<% current_user.tradeable_cards.each do |listed_card| %>
				<%= check_box_tag "trade[cards_from_receiver][]", listed_card.id, (true if @trade.cards_from_receiver.include?(listed_card.id)) %>
				<%= listed_card.card.name %> <br>
			<% end %>

			<h2><%= @user.first_name%>'s Cards</h2>
			<% @user.tradeable_cards.each do |listed_card| %>
				<%= check_box_tag "trade[cards_from_initiator][]", listed_card.id, (true if @trade.cards_from_initiator.include?(listed_card.id)) %>
				<%= listed_card.card.name %> <br>
			<% end %>

			<%= f.submit "Propose Amended Trade" %>
		<% end %>
	<% end %>
</div>