<div class="section-inner search-theme mobile-collapse">

	<%= form_for @trade do |f| %>


			<% current_user.tradeable_cards.each do |listed_card| %>
			 	<%= check_box_tag "cards_from_initiator[]", checked_value = listed_card.id, (true if @trade.cards_from_initiator.include? listed_card.id.to_s ) %>
			 	<%= listed_card.card.name %>
			 	<br>
			<% end %>


			<% @user.tradeable_cards.each do |listed_card| %>
			 	<%= check_box_tag "cards_from_receiver[]", checked_value = listed_card.id, (true if @trade.cards_from_receiver.include? listed_card.id.to_s ) %>
			 	<%= listed_card.card.name %>
			 	<br>
			<% end %>



		<%= f.submit "Propose Amended Trade" %>
	<% end %>
</div>