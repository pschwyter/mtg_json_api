<div class="section-inner search-theme mobile-collapse">

		<%= form_for [@user, @trade] do |f| %>

			<h2>Your Cards</h2>
			<%= render "display_tradeable_cards", :bool => false, :user => current_user, :init_or_receiv => "initiator" %>

			<h2><%= @user.first_name %>'s Cards</h2>
			<%= render "display_tradeable_cards", :bool => false, :user => @user, :init_or_receiv => "receiver" %>

			<%= f.submit "Propose Trade" %>
		<% end %>
</div>

