<table class="table-minimal">
	<thead>
		<tr>
			<th>qty</th>
			<th>Name</th>
			<th>Set</th>
			<th>$</th>
		</tr>
	</thead>
	<tbody>
		<% i = 0 %>
		<% @trade.send("cards_from_#{init_or_receiv}").each do |card_id| %>
		<tr>
			<td>
				<%= @trade.send("qty_from_#{init_or_receiv}")[i]  %>
			</td>
			<td>
				<% if init_or_receiv == "initiator" %>
					<%= @card_ids_from_initiator[i].name unless @card_ids_from_initiator == nil %>
				<% else %>
					<%= @card_ids_from_receiver[i].name unless @card_ids_from_receiver == nil  %>
				<% end %>		
			</td>
			<td>
				<% if init_or_receiv == "initiator" %>
					<%= @card_ids_from_initiator[i].card_set.name unless @card_ids_from_initiator == nil %>
				<% else %>
					<%= @card_ids_from_receiver[i].card_set.name unless @card_ids_from_receiver == nil %>
				<% end %>	
			</td>
			<td>
				$ 10
			</td>
		<% i +=1 %>
		</tr>
		<% end %>
	</tbody>

</table>