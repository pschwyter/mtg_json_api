
      <div class="modal">
        <label for="<%= listed_card.card.id %>">
          <div class="modal-trigger"><%= listed_card.card.name %></div>
        </label>
        <input class="modal-state" id="<%= listed_card.card.id %>" type="checkbox" />
        <div class="modal-window">
          <div class="modal-inner">
            <label class="modal-close" for="<%= listed_card.card.id %>"></label>
           
        <div class="modal-display">
            <div class="modal-header">
              <div class="modal-card-name">
                <h1><%= listed_card.card.name %></h1>
              </div>
              <div class="modal-card-mana">
                <%= all_mana_cost_images_large(listed_card.card) %> 
                            
              </div>
            </div>

              
                <div class="modal-card-image">
                  <img src="http://mtgimage.com/setname/<%="#{listed_card.card.card_set.name}"%>/<%= "#{listed_card.card.name}" %>.jpg" alt="A bird on a fence" />
                </div>


              
                <div class="modal-card-info">     
                  <h4>Set</h4>
                  <p><%= listed_card.card.card_set.name %></p>
                  
                  <h4>Card Type</h4>
                  <p><%= listed_card.card.card_types.first.name %></p>
                  

                  <h4>Card Text</h4>
                  <p><%= listed_card.card.text %></p>   
                </div>              
                <div class="modal-card-options">

                  <div class="modal-find-nearby-button">
                    <div class="button-sexiness"><%= link_to "Find Card Nearby", return_first_search_result_path({card_fields: {name: listed_card.card.name, card_set: listed_card.card.card_set.name}, distance: 1}), class: "button", :method => :post %></div>
                  </div>

                  <div class="modal-add-to-list-button">
                    
                    <div class="modal-inventory-button">                      
                      <div class="button-sexiness"><%= link_to "+ Inventory", add_to_inventory_path(listed_card.card.id), class: "button", :method => :put, :remote => true %></div>
                    </div>
                    <div class="modal-tradeable-button">
                      <div class="button-sexiness"><%= link_to "+ Trade Binder", add_to_tradeable_path(listed_card.card.id), class: "button", :method => :put, :remote => true %></div>
                    </div>
                    <div class="modal-wishlist-button">
                      <div class="button-sexiness"><%= link_to "+ Wishlist", add_to_wanted_path(listed_card.card.id), class: "button", :method => :put, :remote => true %></div>                
                    </div>                   
                                         
                  </div>
                  
                </div>
              
                

            </div>
          </div>
        </div>
      </div>