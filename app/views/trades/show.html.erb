<div class="section-inner search-theme mobile-collapse">

	<% if @trade.initiator == current_user %>
		<%= form_for @trade do |f| %>
			<h2>Your Cards</h2>
			<%= render "display_initiator_tradeable_cards", :bool => true %>
			<h2><%= @trade.other_user(current_user).full_name %>'s Cards</h2>
			<%= render "display_receiver_tradeable_cards", :bool => true %>
		<% end %>

	<% elsif @trade.receiver == current_user %>
		<%= form_for @trade do |f| %>
			<%= render "display_initiator_tradeable_cards", :bool => true %>

			<%= render "display_receiver_tradeable_cards", :bool => true %>
		<% end %>
	<% end %>

	<% unless @trade.status == "complete" %>
		<%= link_to "Edit Trade", edit_trade_path(@trade.id) %>
		<%= button_to "Accept Trade", accept_trade_path(@trade.id) %>
	<% end %>

</div>