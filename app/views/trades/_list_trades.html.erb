	<table>
		<thead>
			<tr>
				<th>View</th>
				<th>User</th>
				<th>Delta</th>
				<th>Status</th>
				<th>Cancel</th>
			</tr>
		</thead>
		<tbody>
		<% @trades.each do |trade| %>
			<tr>
				<td>
					<%= link_to "View Trade #{trade.id}", trade_path(trade.id) %>
				</td>
				<td>
					<% other_user = trade.other_user(current_user) %>
					<%= link_to "#{other_user.full_name}", user_path(other_user.id) %>
				</td>
				<td>
					- $2.36
				</td>
				<td>
					<%= trade.display_status(current_user) %>
				</td>
				<td>
					<%= link_to "Cancel", cancel_trade_path(trade.id), method: :destroy %>
				</td>
			</tr>
		<% end %>
		</tbody>

	</table>