	<table class="table-minimal">
		<thead>
			<tr>
				<th></th>
				<th>User</th>
				<th>Delta</th>
				<th>Status</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		<% @trades.where(status: status).each do |trade| %>
			<tr>
				<td>
					<%= link_to "View", trade_path(trade.id) %>
				</td>
				<td>
					<% other_user = trade.other_user(current_user) %>
					<%= link_to "#{other_user.full_name}", user_path(other_user.id) %>
				</td>
				<td>
					- $2.36
				</td>
				<td>
					<%= trade.display_status(current_user) %>
				</td>
				<% unless trade.status == "cancelled" %>
					<td>
						<%= link_to "Cancel", cancel_trade_path(trade.id), method: :destroy %>
					</td>
				<% end %>
			</tr>
		<% end %>
		</tbody>

	</table>